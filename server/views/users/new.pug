extends ../layouts/application

block header
     = text('views.users.new.signUp')

block content
    form(action=route('users') method='post')
        +input(user, 'email', errors)(type="email" required="required")
        +input(user, 'password', errors)(type="password" required="required")
        +input(user, 'firstName', errors)(type="text" required="required")
        +input(user, 'lastName', errors)(type="text" required="required")
        +submit(user)(value=text('views.users.new.submit'))

