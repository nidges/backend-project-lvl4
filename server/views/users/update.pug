extends ../layouts/application

block header
    = text('views.users.existing.updateTitle')

block content
    form(action=route('updateUser', { id: user.id }) method='post')
        +input(user, 'email', errors)(type="email" required="required")
        +input(user, 'password', errors)(type="password" required="required")
        +input(user, 'firstName', errors)(type="text" required="required")
        +input(user, 'lastName', errors)(type="text" required="required")
        input(name="_method" type="hidden" value='patch')
        +submit(user)(value=text('views.users.existing.update'))
