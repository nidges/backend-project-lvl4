extends ../layouts/application

block content
    table.table.table-striped.table-hover.table-primary
        thead
            tr
                th= text('views.users.id')
                th= text('views.users.fullName')
                th= text('views.users.email')
                th= text('views.users.createdAt')
                th
            tbody
                each user in users
                    tr
                        td= user.id
                        //td= user.firstName + ' ' + user.lastName
                        td= user.name
                        td= user.email
                        td= formatDate(user.createdAt)
                        td
                            a(href=route('updateUserForm', { id: user.id }))= text('views.users.existing.update')
                            +buttonTo(route('updateUser', { id: user.id }), 'delete')(class='btn btn-link' value=text('views.users.existing.delete'))

                else
                    tr
                        td.text-center(colspan='5')= text('views.users.empty')
