extends ../layouts/application

block header
    = text('views.labels.existing.updateTitle')

block content
    form(action=route('updateLabel', { id: label.id }) method='post')
        +input(label, 'name', errors)(type="text")
        input(name="_method" type="hidden" value='patch')
        +submit(label)(value=text('views.labels.existing.update'))
