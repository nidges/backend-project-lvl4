extends ../layouts/application

block header
    = text('views.tasks.existing.updateTitle')

block content
    form(action=route('updateTask', { id: task.id }) method='post')
        +input(task, 'name', errors)(type="text")
        +textarea(task, 'description')
        +select(task, statuses, 'statusId', errors)
        +select(task, executors, 'executorId', errors)
        input(name="_method" type="hidden" value='patch')
        +submit(task)(value=text('views.tasks.existing.update'))
