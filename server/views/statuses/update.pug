extends ../layouts/application

block header
    = text('views.statuses.existing.updateTitle')

block content
    form(action=route('updateStatus', { id: status.id }) method='post')
        +input(status, 'name', errors)(type="text")
        input(name="_method" type="hidden" value='patch')
        +submit(status)(value=text('views.statuses.existing.update'))
